{
  "manifest_version": 3,

  "name": "Kromex",
  "description": "Kromex is an extension template written in Kotlin, mainly made for Chrome",
  "version": "0.1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": [
        "browser-polyfill.min.js",
        "content_script.js"
      ]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "background"
  ]
}